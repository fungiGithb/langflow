# Environment Variables

# CATEGORIA: CONFIGURAÇÃO BASE
LANGFLOW_CONFIG_DIR=/app/langflow # Caminho padrão de configuração do LangFlow (conforme definido no docker-compose)

LANGFLOW_SAVE_DB_IN_CONFIG_DIR=True # Salva o banco de dados no diretório de configuração para centralizar todos os arquivos

LANGFLOW_DATABASE_URL=sqlite:///./langflow.db # Banco de dados SQLite sem necessidade de PostgreSQL externo

LANGFLOW_DATABASE_CONNECTION_RETRY=True # Reconexão automática ao banco de dados em caso de falha temporária

LANGFLOW_HOST=localhost # Host de execução do servidor LangFlow

LANGFLOW_WORKERS=1 # Uma única instância de worker na VPS para otimizar recursos

LANGFLOW_PORT= # Porta deixada em branco para usar a configuração padrão do LangFlow


# CATEGORIA: LOGS & RASTREAMENTO
LANGFLOW_LOG_LEVEL=info # Nível de log definido como "info" para registrar informações relevantes da operação do sistema

LANGFLOW_LOG_FILE=/app/langflow/logs/langflow.log # Caminho centralizado onde todos os logs de operação (erros, avisos, debug) são salvos

LANGFLOW_LOG_ROTATION=70 MB # Rotação de logs por tamanho (70 MB) para evitar múltiplos arquivos pequenos desnecessários e otimizar espaço em disco

DO_NOT_TRACK=True # Desativa a telemetria anônima do LangFlow para reduzir operações e garantir maior segurança dos dados

LANGFLOW_DEACTIVATE_TRACING=False # Rastreamento mantido ativo para monitorar execução de fluxos e diagnosticar problemas


# CATEGORIA: AUTENTICAÇÃO E SEGURANÇA
LANGFLOW_SUPERUSER=gaspar.inovacao@gmail.com # Email do usuário superusuário (administrador) com acesso completo ao sistema

LANGFLOW_SUPERUSER_PASSWORD=GJlangM4sT3RflowFug1GJ- # Senha criptografada do superusuário para acesso administrativo seguro

LANGFLOW_SECRET_KEY=qBqURzHSSt3jb1RTznq2VUmrzIEm1_wtgSbRgfvnf4c # Chave secreta para criptografia de sessões e tokens de segurança

LANGFLOW_ENABLE_SUPERUSER_CLI=False # Desativa interface CLI do superusuário para reduzir superfície de ataque em produção

LANGFLOW_AUTO_LOGIN=False # Desativa login direto por link (sem usuário/senha) para garantir segurança máxima

LANGFLOW_REMOVE_API_KEYS=True # Remove chaves de API dos fluxos armazenados para evitar exposição acidental de credenciais sensíveis

LANGFLOW_STORE_ENVIRONMENT_VARIABLES=True # Permite armazenar variáveis de ambiente de forma segura no banco de dados para reutilização

LANGFLOW_NEW_USER_IS_ACTIVE=False # Novas contas criadas ficam inativas por padrão até aprovação manual do administrador


# CATEGORIA: INTERFACE E EXPERIÊNCIA DO USUÁRIO
LANGFLOW_OPEN_BROWSER=False # Não abre o navegador automaticamente ao iniciar o servidor em ambiente de produção

LANGFLOW_BACKEND_ONLY=False # Executa tanto backend quanto frontend para permitir acesso à interface web completa - ao invés de só ativar apenas o backend/API.

LANGFLOW_FRONTEND_PATH= # Deixado em branco pois é destinado apenas para desenvolvimento customizado, não necessário em produção

LANGFLOW_AUTO_SAVING=True # Salvamento automático dos fluxos ativo, para não perder trabalho em caso de falha

LANGFLOW_AUTO_SAVING_INTERVAL=2000 # Intervalo de 2 segundos (2000 milissegundos) entre salvamentos automáticos dos fluxos

# CATEGORIA: CACHE & BANCO DE DADOS
LANGFLOW_CACHE_TYPE=async # Cache assíncrono mantém configuração simples sem Redis (adequado para 1 VPS com 1 instância do Langflow)

LANGFLOW_LANGCHAIN_CACHE=SQLiteCache # Cache persistente em SQLite que mantém resultados mesmo após reinicializações (melhor que InMemoryCache)

LANGFLOW_FALLBACK_TO_ENV_VAR=True # Permite usar variáveis de ambiente como fallback quando global variables não são encontradas no banco de dados


# CATEGORIA: LIMITES E VALIDAÇÕES
LANGFLOW_MAX_FILE_SIZE_UPLOAD=300 # Limite de 300 MB por arquivo para uploads via UI ou API

LANGFLOW_MAX_ITEMS_LENGTH=100 # Número máximo de itens exibidos no editor visual (listas maiores serão truncadas)

LANGFLOW_MAX_TEXT_LENGTH=5000 # Limite de caracteres para campos de texto para evitar overhead de processamento

LANGFLOW_ERROR_ON_MISSING=True # Lança erro quando uma global variable necessária não é encontrada (em vez de falhar silenciosamente)


# CATEGORIA: RECURSOS AVANÇADOS
LANGFLOW_MCP_COMPOSER_ENABLED=True # Ativa o MCP Composer para expor seus flows como ferramentas para aplicações IA (Claude, Cursor, Windsurf) com autenticação segura

LANGFLOW_CELERY_ENABLED=False # Desativa Celery (task queue distribuída) pois não é necessário com apenas 1 instância do LangFlow na VPS

LANGFLOW_WORKER_TIMEOUT=900 # Timeout de 900 segundos (15 minutos) para execução de tasks/fluxos antes de interrupção automática


# CATEGORIA: CONECTIVIDADE
BACKEND_URL= # URL base que o frontend usa para comunicação com o backend (deixado em branco para o sistema identificar e gerar automaticamente)
